<div class="bg-white fixed top-0 w-full h-[4.5rem] z-50 p-4">
  <div class="container flex justify-center mx-auto">

    <div class="flex items-center justify-between w-full max-w-7xl">
      <div class="flex items-center">

        <a href="/" class="flex items-center">
          <img src="<%= asset_path('HS-logo.png') %>"
               class="h-10" alt="Hochschule Esslingen"/>
        </a>

        <div class="flex items-center ml-10 ">
          <span class="text-lg">
            <%= link_to 'TimeTable', root_path, class: current_page?(root_path)? "text-blue-600 font-semibold" : "" %>
          </span>
        </div>

        <div class="flex items-center ml-10 ">
          <span class="text-lg">
            <%= link_to 'Courses', courses_path, class: current_page?(courses_path)? "text-blue-600 font-semibold" : "" %>
          </span>
        </div>

      </div>
    </div>

    <div class="flex items-center mr-4">
      <div class="flex items-center justify-center w-10 h-10 mr-2 text-white rounded-full">
        <img src="<%= asset_path('user-icon.svg') %>"/>
      </div>
      <span class="mr-4 text-l">
        <%= current_user.email %>
      </span>
    </div>

    <div class="flex items-center mr-4 text-red-500 fill-red-500 hover:fill-red-900 hover:text-red-900">
      <%= button_to destroy_user_session_path, method: :delete, class: 'flex items-center' do %>
        <img src="<%= asset_path('logout-icon.svg') %>" class="mr-2" />
        Logout
      <% end %>
    </div>

  </div>
</div>
